# Smart Cart Backend - Environment Variables
# Copy this file to .env and fill in your values

# Server
PORT=3000
NODE_ENV=development

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/smartcart

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long

# OpenAI (for AI features)
OPENAI_API_KEY=sk-your-openai-api-key

# Google (for Places API and OAuth)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
GOOGLE_PLACES_API_KEY=your-google-places-api-key
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:19006

# Cloudinary (for image uploads - optional)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Email Service (for password reset - optional)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key
FROM_EMAIL=noreply@smartcart.app
